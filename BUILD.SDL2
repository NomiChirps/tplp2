load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

cmake(
    name = "SDL2",
    build_args = [
        # parallelize
        "-j6",
    ],
    lib_source = ":all_srcs",
    out_static_libs = [
        "libSDL2.a",
    ],
    visibility = ["//visibility:public"],
)
