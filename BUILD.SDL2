load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

configure_make(
    name = "SDL2",
    autogen = False,
    configure_in_place = True,
    env = {
        # Parallelize
        "MAKEFLAGS": "-j6",
    },
    lib_source = ":all_srcs",
    target_compatible_with = [
        "@platforms//os:linux",
    ],
    out_static_libs = [
        "libSDL2.a",
    ],
    visibility = ["//visibility:public"],
)
