load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

configure_make(
    name = "SDL2",
    env = {
        # Parallelize
        "MAKEFLAGS": "-j6",
    },
    lib_source = ":all_srcs",
    out_static_libs = [
        "libSDL2.a",
    ],
    visibility = ["//visibility:public"],
)
