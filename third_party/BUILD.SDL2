load("@rules_foreign_cc//foreign_cc:defs.bzl", "cmake")

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

cmake(
    name = "SDL2",
    build_args = [
        # parallelize
        "-j6",
    ],
    lib_source = ":all_srcs",
    out_shared_libs = select({
        "@platforms//os:linux": ["libSDL2.so"],
        "@platforms//os:macos": ["libSDL2-2.0.dylib"],
    }),
    visibility = ["//visibility:public"],
)

cc_library(
    name = "headers_only",
    hdrs = glob(["include/*.h"]),
    include_prefix = "SDL2",
    strip_include_prefix = "include",
    visibility = ["//visibility:public"],
)
