{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[debug] build",
            "command": "bazel",
            "args": [
                "build",
                "//tplp:firmware.elf",
                "//tplp:firmware.uf2",
                "--config=debug",
            ],
            "type": "shell",
        },
        {
            "label": "[iterate] build",
            "command": "bazel",
            "args": [
                "build",
                "//tplp:firmware.elf",
                "//tplp:firmware.uf2",
                "--config=iterate",
            ],
        },
        {
            "label": "[iterate] build & flash",
            "dependsOn": [
                "[iterate] build",
                "flash tplp",
            ],
            "dependsOrder": "sequence",
        },
        {
            "label": "[iterate] build & flash & monitor",
            "dependsOn": [
                "[iterate] build",
                "flash tplp",
                "monitor usb serial output",
            ],
            "dependsOrder": "sequence",
        },
        {
            "label": "flash tplp",
            "command": "./tools/flash_usbmsc.sh",
            "args": [
                "${workspaceFolder}/bazel-bin/tplp/firmware.uf2",
            ],
            "type": "shell",
        },
        {
            "label": "monitor usb serial output",
            "command": "./tools/monitor_usbserial.sh",
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "refresh compile_commands.json",
            "command": "./tools/refresh_compile_commands.sh",
            "type": "shell",
        },
        {
            "label": "flash pico-debug",
            "command": "bazel",
            "args": [
                "run",
                "//tools:flash-pico-debug",
            ],
        },
    ]
}