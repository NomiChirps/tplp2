    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pico Debug",
            "device": "RP2040",
            "gdbPath": "arm-none-eabi-gdb",
            "cwd": "${workspaceRoot}",
            "executable": "./bazel-bin/tplp/firmware.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040-core0.cfg",
            ],
            "openOCDLaunchCommands": [
                "transport select swd",
                "adapter speed 4000"
            ],
            "svdFile": "bazel-tplp2/external/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "runToEntryPoint": "main",
            "postRestartCommands": [
                "break main",
                "continue",
            ],
            "searchDir": [
                // TODO: package
                "/home/nomi/code/openocd/tcl"
            ],
            "preLaunchTask": "[debug] build",
            // what does this do and why doesn't it work?
            //"rtos": "FreeRTOS",
        },
    ]
}